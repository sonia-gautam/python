largest = None
smallest = None
while True:
  num = input("Enter a number: ")
  if num == "done" :
      break
  try : 
    p = int(num)

  except Exception :
    print("Invalid input")
    continue

  if largest == None :
    largest = p

  elif largest < p :
    largest = p

  if smallest == None :
    smallest = p

  elif smallest > p :
    smallest = p


print("Maximum is", largest)
print("Minimum is", smallest)
